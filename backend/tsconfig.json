{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./dist",
    "outDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "strict": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "typeRoots": [
      "./src/@types",
      "./@types",
      "./node_modules/@types"
    ]    
  }
}